<Window x:Class="JSON_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Generator"
        mc:Ignorable="d"
        Title="MainWindow" Height="578" Width="526.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="353*"/>
            <ColumnDefinition Width="164*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="AddText" HorizontalAlignment="Left" Height="24" Margin="-531,12,0,0" TextWrapping="Wrap" Text="Add" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddBtn" Content="Add New Entry" HorizontalAlignment="Right" Margin="0,19,23,0" VerticalAlignment="Top" Width="109" Height="24" Click="AddBtn_Click" Grid.Column="1"/>
        <Button x:Name="OpenBtn" Content="Open JSON File" HorizontalAlignment="Left" Margin="30,19,0,0" VerticalAlignment="Top" Width="106" Height="24" Click="OpenBtn_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" Margin="30,56,23,10" TextWrapping="Wrap" Text="JSON TEXT" VerticalAlignment="Stretch"  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
